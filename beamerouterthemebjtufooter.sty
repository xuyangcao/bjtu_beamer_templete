\mode<presentation>

\setbeamercolor{section in head/foot}{parent=palette primary}
\setbeamercolor{subsection in head/foot}{parent=palette primary}

\setbeamercolor{author in head/foot}{parent=footer}
\setbeamercolor{title in head/foot}{parent=subsection in head/foot}


% Foot
\defbeamertemplate*{footline}{simplefooter theme}
{%
\hbox{%
	\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{author in head/foot}%
		\usebeamerfont{author in head/foot}\insertshortauthor
	\end{beamercolorbox}%
	
	\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,center]{title in head/foot}%
		\usebeamerfont{title in head/foot}\insertsection
	\end{beamercolorbox}%
	
	\begin{beamercolorbox}[wd=.333333\paperwidth,ht=2.25ex,dp=1ex,right]{date in head/foot}%
		\usebeamerfont{date in head/foot}\insertshortdate{}\hspace*{2em}
		\insertframenumber{} / \inserttotalframenumber\hspace*{2ex}
    \end{beamercolorbox}}%
}


% navigation symbols
\defbeamertemplate*{sidebar right}{sidebar theme}%
{%
  \vfill%
  \llap{\usebeamertemplate***{navigation symbols}\hskip0.1cm}%
  \vskip2pt%
}%

% headline
\defbeamertemplate*{headline}{sidebar theme}
{%
\begin{beamercolorbox}[wd=\paperwidth]{frametitle}
    \usebeamercolor{logo}%
    \hskip 1.2cm%
    \hbox to 0pt{\hss\vbox to 0pt{\vss\hbox{\insertlogo}\vss}}%
    \vskip -7ex
\end{beamercolorbox}
}

% frame title
\setbeamertemplate{frametitle}{%
    % \hspace{0.5cm}\usebeamerfont{frametitle}\textbf{\insertframetitle} % left side align
    \vspace{0.51ex}
   \centering \textbf{\insertframetitle} % centering
   
    \par%
    \hspace*{-\dimexpr0.5\paperwidth-0.5\textwidth}%
    \color{ruler_blue}\rule{\paperwidth}{2pt}%
}