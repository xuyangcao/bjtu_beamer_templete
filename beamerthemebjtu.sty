\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamerthemebjtu}

\mode<presentation>
{
  \usefonttheme{serif}
} 

\useinnertheme{rectangles}
\useoutertheme{bjtufooter}

% title page 
\setbeamertemplate{title page}{%
    % logo in the first page
    \begin{minipage}{1.\textwidth}%
    	\vspace{-0.15cm}\hspace{-0.9cm}\includegraphics[height=1.0cm,width=1.0cm]{logo/logo_bjtu_light_blue}\hspace{0.1cm}\vspace{2pt}\includegraphics[height=0.9cm]{logo/header_bjtu_light_blue}%
    \end{minipage}%
    \par%
    \hspace*{-\dimexpr0.5\paperwidth-0.5\textwidth}%
    \color{ruler_blue}\rule{\paperwidth}{2pt}%


    % title
    \begin{centering}
        \begin{beamercolorbox}[sep=8pt,center,wd=12cm]{title}
        
            \vspace{4em}\usebeamerfont{title}{\color{dark blue}\textbf{\inserttitle}}\par%
            \ifx\insertsubtitle\@empty%
            \else%
                \vskip0.25em%
                {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
            \fi%    
            \ifx\insertinstitute\@empty%
            \else%
                \vskip0.25em%
                {\usebeamerfont{subtitle}\usebeamercolor[fg]{institute}\insertinstitute\par}%
            \fi%     
        \end{beamercolorbox}%
    
        % author
        \begin{textblock*}{5cm}(6cm, 1.5cm)
            {\color{title blue}\usebeamerfont{author}\insertauthor}
        \end{textblock*}
        
        % date 
        \begin{textblock*}{5cm}(6cm, 2.5cm)
            {\color{title blue}\usebeamerfont{author}\insertdate}
        \end{textblock*}
    
    \end{centering}
}

